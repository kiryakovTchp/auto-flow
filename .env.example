# Server
PORT=3000

# One-time init flow for first admin user
INIT_ADMIN_TOKEN=

# Optional: protect /metrics
METRICS_TOKEN=

# Optional. Used by Admin UI for default Asana webhook target URL.
PUBLIC_BASE_URL=https://yourdomain.com

# Secrets are stored in Postgres (encrypted) via /admin UI.
# Env vars below are optional fallbacks for local/dev.

# Asana
ASANA_PAT=
ASANA_PROJECT_GID=
ASANA_WEBHOOK_SECRET=

# GitHub
GITHUB_TOKEN=
GITHUB_OWNER=
GITHUB_REPO=
GITHUB_WEBHOOK_SECRET=

# OpenCode OAuth (server-managed)
OPENCODE_OAUTH_AUTH_URL=
OPENCODE_OAUTH_TOKEN_URL=
OPENCODE_OAUTH_CLIENT_ID=
OPENCODE_OAUTH_CLIENT_SECRET=
OPENCODE_OAUTH_SCOPES=

# OpenCode Web UI (optional)
OPENCODE_WEB_URL=
OPENCODE_WEB_EMBED=

# PostgreSQL (node-postgres reads PG* variables)
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=
PGDATABASE=auto_flow
